<?xml version="1.0" encoding="utf-8"?>
<selector xmlns:android="http://schemas.android.com/apk/res/android">
    <!-- Selected Tab -->
    <item android:state_selected="true">
        <shape android:shape="rectangle">
            <solid android:color="#FFFFFF" /> <!-- Selected tab background -->
            <stroke android:width="2dp" android:color="#004369" /> <!-- Outline color -->
        </shape>
    </item>

    <!-- Unselected Tab -->
    <item>
        <shape android:shape="rectangle">
            <solid android:color="#004369" /> <!-- Unselected tab background -->
            <stroke android:width="2dp" android:color="#FFFFFF" /> <!-- Outline color -->
        </shape>
    </item>
</selector>
